<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ứng dụng Điểm danh"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Mã sinh viên -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã sinh viên:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etStudentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã sinh viên"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Chọn ca học -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ca học:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Thông tin WiFi -->
        <TextView
            android:id="@+id/tvWifiInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WiFi: Đang tải..."
            android:textSize="14sp"
            android:background="@android:color/background_light"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Thời gian -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian: Đang tải..."
            android:textSize="14sp"
            android:background="@android:color/background_light"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Camera Preview -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera (Selfie):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Nút chụp ảnh -->
        <Button
            android:id="@+id/btnCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chụp ảnh"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Ảnh đã chụp -->
        <ImageView
            android:id="@+id/ivCapturedPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Nút gửi điểm danh -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi điểm danh"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white" />

        <!-- Hướng dẫn -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn:\n1. Nhập mã sinh viên\n2. Chọn ca học\n3. Chụp ảnh selfie\n4. Gửi điểm danh\n\nLưu ý: Click vào thông tin WiFi và thời gian để cập nhật"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:background="@android:color/background_light"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>